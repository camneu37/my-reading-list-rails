<% if @user && @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag('/sessions') do %>
  <%= label_tag "Username" %>
  <%= text_field_tag "username" %>
  <br>
  <%= label_tag "Password" %>
  <%= password_field_tag "password" %>
  <br>
  <%= submit_tag "Log In" %>
<% end %>

