<div class="page-header">
  <h2><%= @book.title %></h2>
</div>

<div class="book-attrs list">
  <ul>
    <li><%= @book.author_name %></li>
    <li><%= @book.genre %></li>
    <% if !@book.about.empty? %>
      <li><%= @book.about %></li>
    <% end %>
  </ul>
</div>

<%= form_tag book_path(@book.id), method: "delete" do %>
  <%= submit_tag "Delete Book" %>
<% end %>
