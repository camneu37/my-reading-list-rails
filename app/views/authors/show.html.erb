<div class="page-header">
  <h2><%= @author.name %></h2>
</div>

<div class="books list">
  <ul>
    <% @author.books.each do |book| %>
      <li><%= link_to book.title, book_path(book) %></li>
    <% end %>
  </ul>
</div>

<br><br>

<%= button_to "Add a new book by #{@author.name}", new_author_book_path(@author), method: "get" %>
