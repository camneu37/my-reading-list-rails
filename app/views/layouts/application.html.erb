<!DOCTYPE html>
<html>
  <head>
    <title>My Reading List</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">My Reading List</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/books">Book Library</a></li>
            <li><a href="/authors">Author List</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= button_to "Log Out", session_path(current_user.id), method: "delete", class: "btn navbar-btn btn-danger" %></li>
            <% else %>
              <li><a href="/users/new"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
              <li><a href="/sessions/new"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <%= yield %>

    </div>
  </body>
</html>
