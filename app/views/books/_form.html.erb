<%= form_for @book do |f| %>
  <%= label_tag "Title:" %>
  <%= f.text_field :title %>
  <br>
  <%= label_tag "Genre:" %>
  <%= f.radio_button :genre, "Fiction" %>
  <%= f.label "Fiction"%>
  <%= f.radio_button :genre, "Non-Fiction"%>
  <%= f.label "Non-Fiction" %>
  <br>
  

  <%= f.submit %>

<% end %>
