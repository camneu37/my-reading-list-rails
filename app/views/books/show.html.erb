<div class="page-header">
  <h2><%= @book.title %></h2>
</div>

<div class="book-attrs list">
  <ul>
    <li><%= link_to @book.author_name, author_path(@book.author) %></li>
    <li><%= @book.genre %></li>
    <% if !@book.about.empty? %>
      <li><%= @book.about %></li>
    <% end %>
  </ul>
</div>

<%= form_tag edit_book_path(@book.id), method: "get" do %>
  <%= submit_tag "Edit Book" %>
<% end %>

<%= form_tag book_path(@book.id), method: "delete" do %>
  <%= submit_tag "Delete Book" %>
<% end %>
